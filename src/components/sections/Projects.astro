---
// 1. ZONA DE LÓGICA (TypeScript)

// Definimos la estructura obligatoria de un proyecto
interface Project {
  title: string;
  description: string;
  tags: string[]; // Un array de textos (ej: ['React', 'CSS'])
  link: string;   // Enlace al proyecto o GitHub
}

// Aquí están tus proyectos. 
// TIP: Cuando tengas proyectos reales, solo cambias estos textos.
const projects: Project[] = [
  {
    title: "E-commerce Dashboard",
    description: "Panel de administración moderno con gráficos en tiempo real y gestión de inventario. Optimizado para carga rápida.",
    tags: ["React", "Tailwind", "Recharts"],
    link: "#", // Pon aquí el link real cuando lo tengas
  },
  {
    title: "Landing Page Corporativa",
    description: "Sitio web de alto impacto para una agencia de marketing, con animaciones suaves y SEO optimizado.",
    tags: ["Astro", "TypeScript", "Motion"],
    link: "#",
  },
  {
    title: "App de Gestión de Tareas",
    description: "Aplicación progresiva (PWA) para organizar tareas diarias con modo oscuro y almacenamiento local.",
    tags: ["React", "LocalStorage", "CSS Modules"],
    link: "#",
  }
];
---

<section id="proyectos" class="py-20 bg-slate-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <h2 class="text-3xl font-bold text-white mb-12">
            Proyectos Destacados <span class="text-blue-500">.</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            
            {projects.map((project) => (
                
                <article class="bg-slate-800/50 rounded-xl overflow-hidden border border-white/10 hover:border-blue-500/50 transition-all hover:-translate-y-2 group">
                    
                    <div class="h-48 bg-gradient-to-br from-slate-700 to-slate-800 w-full relative overflow-hidden group-hover:scale-105 transition-transform duration-500">
                         <div class="absolute inset-0 flex items-center justify-center text-slate-500 font-medium">
                            Imagen del Proyecto
                         </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                            {project.title}
                        </h3>
                        
                        <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                            {project.description}
                        </p>

                        <div class="flex flex-wrap gap-2 mb-6">
                            {project.tags.map((tag) => (
                                <span class="text-xs px-2 py-1 rounded bg-blue-900/30 text-blue-300 border border-blue-500/20">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <a href={project.link} class="inline-flex items-center text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors">
                            Ver detalles 
                            <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </a>
                    </div>
                </article>

            ))}

        </div>
    </div>
</section>