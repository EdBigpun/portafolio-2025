---
// Projects.astro
interface Project {
  title: string;
  description: string;
  tags: string[];
  link: string;
}

const projects: Project[] = [
  {
    title: "Wheeelz (Colaborativo)",
    description: "Proyecto de desarrollo colaborativo enfocado en soluciones de movilidad. Desarrollado en equipo aplicando control de versiones con Git y metodología ágil.",
    tags: ["React", "Teamwork", "Git"], 
    link: "https://github.com/EdBigpun", // Actualizar al link directo del repo
  },
  {
    title: "Sistema CRUD de Clientes",
    description: "Sistema completo de gestión de clientes. Backend robusto con Java Spring Boot y frontend interactivo. Permite crear, leer, actualizar y eliminar registros.",
    tags: ["Java", "Spring Boot", "React", "MySQL"],
    link: "https://github.com/EdBigpun",
  },
  {
    title: "Generador de Facturas PDF",
    description: "Aplicación web para automatizar la creación de facturas. Permite ingresar datos de clientes y productos, generando documentos PDF listos para imprimir.",
    tags: ["React", "Node.js", "PDFKit"],
    link: "https://github.com/EdBigpun",
  }
];
---

<section id="proyectos" class="py-20 bg-slate-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <h2 class="text-3xl font-bold text-white mb-12">
            Proyectos Destacados <span class="text-blue-500">.</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                <article class="bg-slate-800/50 rounded-xl overflow-hidden border border-white/10 hover:border-blue-500/50 transition-all hover:-translate-y-2 group">
                    
                    <div class="h-48 bg-gradient-to-br from-slate-700 to-slate-800 w-full relative overflow-hidden group-hover:scale-105 transition-transform duration-500">
                         <div class="absolute inset-0 flex items-center justify-center text-slate-500 font-medium px-4 text-center">
                            {project.title}
                         </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                            {project.title}
                        </h3>
                        
                        <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                            {project.description}
                        </p>

                        <div class="flex flex-wrap gap-2 mb-6">
                            {project.tags.map((tag) => (
                                <span class="text-xs px-2 py-1 rounded bg-blue-900/30 text-blue-300 border border-blue-500/20">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <a href={project.link} target="_blank" class="inline-flex items-center text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors">
                            Ver código 
                            <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>