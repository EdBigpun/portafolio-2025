---
// Importamos el Header nuevo
import Header from './Header.astro';
import Footer from './Footer.astro'; // <--- 1. NUEVA IMPORTACIÃ“N

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth"> <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio Profesional" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	
	<body class="bg-slate-900 text-slate-100 min-h-screen font-sans">
		
		<Header />

		<main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 pt-20">
			<slot />
		</main>

		<Footer />

	</body>
</html>